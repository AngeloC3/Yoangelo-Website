<div class="row">
    
    <div class="col-sm-5">
        <h2>Login</h2>
        <% if (typeof incorrectLogin !== 'undefined' && incorrectLogin === true) {%>
            <h3 class="text-danger text-decoration-underline">Invalid attempt</h3>
        <% } %>
        <form method="post" action="/login">
            username: <input type="text"
                                autocomplete="username"
                                name="username"><br>
            passphrase: <input  type="password"
                                autocomplete="passphrase"
                                name="passphrase"><br>
            <input type="submit">
        </form>
    </div>
    
    <div class="col-sm-5">
        <h2>Signup</h2>
        <form method="post" action="/signup">
            username: <input type="text" autocomplete="username" name="username"><br>
            password
                <input type="password" autocomplete="passphrase" name="passphrase"><br>
            confirm password:
                <input type="password" name="passphrase2"><br>
            <input type="submit">
        </form>
    </div>
</div>
