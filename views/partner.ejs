<div class="col-sm-5">
    <h1>Your code is: <%= partnerCode %></h1>
    <% if (partnerUsername == undefined) {%>
        <h2><u>Add a partner!</u></h2>
        <% if (typeof notFound !== 'undefined' && notFound === true) {%>
            <h4 class="text-danger text-decoration-underline p-3">Invalid partner</h4>
        <% } %>
        <form class="form-control-lg" method="post" action="/partner/set">
            <div class="form-group">
              <label for="friendName">Partner username</label>
              <input type="text" class="form-control" id="friendName" name="friendName" placeholder="">
            </div>
            <br>
            <div class="form-group">
                <label for="friendCode">Partner code</label>
                <input type="text" maxlength="6" class="form-control" id="friendCode" name="friendCode" placeholder=""></input>
              </div>
            <br>
            <div class="d-flex justify-content-center" >
                <input type="submit" >
            </div>
        </form>
    <% } else { %>
        <h2>Your partner is: <%= partnerUsername %></h2>
        <a href="/partner/remove" type="button" class="btn btn-outline-primary" onclick="return confirm('Are you sure you want to remove partner?')">Remove Partner</a>
    <% } %>
</div>

